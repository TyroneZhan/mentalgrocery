<script>
    function searchByPostCodes() {
        var url = '@Url.Action("SearchPostCodes", "WalkingLists")';
        var postcode = $('#post_code').val();
        if (postcode === "")
        {} else {
            var pcode = parseInt(postcode);
            if (pcode >= 3000 && pcode <= 3999) {
                window.location.href = url + '/?postcode=' + postcode;
            } else {
                alert("Please enter valid postcode !");
            }
        }
    }
</script>